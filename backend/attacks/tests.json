{
  "tests": [
    {
      "name": "GET without user ID should return 401",
      "method": "GET",
      "path": "/",
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "GET with user ID should return attacks list",
      "method": "GET",
      "path": "/",
      "headers": {
        "X-User-Id": "1"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "count": 0,
        "attacks": []
      }
    },
    {
      "name": "POST start without required fields should return 400",
      "method": "POST",
      "path": "/",
      "headers": {
        "X-User-Id": "1"
      },
      "body": {
        "action": "start",
        "target": "93.187.217.71"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}