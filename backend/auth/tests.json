{
  "tests": [
    {
      "name": "Register new user",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "username": "testuser",
        "password": "testpass123"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "success": true,
        "token": "string",
        "user": {
          "id": "number",
          "username": "string"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login existing user",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "username": "testuser",
        "password": "testpass123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "token": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with wrong password",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "username": "testuser",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
