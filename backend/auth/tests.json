{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "bodyMatcher": "partial"
    },
    {
      "name": "Register new user",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "username": "testuser",
        "email": "test@example.com",
        "password": "password123"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with valid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "test@example.com",
        "password": "password123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with invalid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "test@example.com",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "bodyMatcher": "partial"
    }
  ]
}
